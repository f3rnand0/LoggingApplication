package demo.logging.dto;

public class UserActivity {

	private String username;
	private String sessionId;
	private String searchInput;
	private String searchSelection;
	private String activityType;

	public UserActivity() {
	}

	public UserActivity(String applicationName, String activity, String activityType) {

		this.applicationName = applicationName;
		this.activity = activity;
		this.activityType = activityType;
	}

	@Override
	public String toString() {
		return new StringBuffer(" Application name : ").append(this.applicationName)
				.append(", Activity : ").append(this.activity).append(", Activity type : ")
				.append(this.activityType).toString();
	}
}
